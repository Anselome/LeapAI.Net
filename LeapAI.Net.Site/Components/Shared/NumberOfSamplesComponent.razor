<p>
    Please select the number of images you'd like to generate:
    <select @onchange="ValueChanged" >
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
</p>

@code {
    [Parameter]
    public int Value { get; set; } = 1;

    [Parameter]
    public EventCallback<int> OnValueChanged { get; set; }

    private async Task ValueChanged(ChangeEventArgs e)
    {
        Value = int.Parse(e.Value.ToString());

        await OnValueChanged.InvokeAsync(Value);
    }

}
